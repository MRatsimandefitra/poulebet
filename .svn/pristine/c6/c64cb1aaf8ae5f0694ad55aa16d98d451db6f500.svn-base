{% extends 'BackAdminBundle::layout.html.twig' %}
{% block title %} {{ parent() }} {% endblock %}
{% block ariane %} {{ parent() }} {% endblock %}

{% block page %}

    <div class="box-header-response">
        {{ 'Listes des Matchs du jour'|trans }}
    </div>
    <br/><br/>
    <div class="col-lg-12">
        <div class="col-lg-2">

        </div>
        <div class="col-lg-8">
            <form action="" method="get">
                {{ "Date"|trans }} : <input type="date" name="date_match"/>
                {{ 'Heure'|trans }}: <input type="time" name="heure" />
                {{ 'Pays'|trans }}:
                <select class="pays" name="pays" id="">
                    <option value="all">Tous les pays</option>
                </select>
                {{ 'Championat'|trans }}:
                <select class="pays" name="pays" id="">
                    <option value="all">Tous les pays</option>
                </select>
                <input type="submit" value="{{ 'Mettre Ã  Jour'|trans }}"/>
            </form>
        </div>
        <div class="col-lg-2">

        </div>
        <div class="col-lg-12">
            <div class="header-table">

            </div>
            <table class="table-list">
                <tr>
                    <th>{{ 'Date'|trans }}</th>
                    <th>
                        {{ 'Domicile'|trans }}
                    </th>
                    <th>
                        {{ 'Score'|trans }}
                    </th>
                    <th>
                        {{ 'Visiteur'|trans }}
                    </th>
                    <th>
                        {{ 'Cote 1'|trans }}
                    </th>
                    <th>
                        {{ 'Cote N'|trans }}
                    </th>
                    <th>
                        {{ 'Cote 2'|trans }}
                    </th>
                    <th>
                        {{ 'Status'|trans }}
                    </th>
                    <th>{{ 'Master prono' }}</th>
                    <th>
                        {{ 'Actions'|trans }}
                    </th>
                </tr>
                {% for row in items %}
                    {% if row.status == 'start' %}
                        <tr>
                            <td>{{ row.timestamp_starts|date('d/m/Y - h:i') }}</td>
                            <td>
                                <div class="flag flag-mg" alt="{{ row.teams.hosts.fullname }}" ></div>
                                {{ row.teams.hosts.fullname }}
                            </td>
                            <td>{{ row.score }}</td>
                            <td>
                                <div class="flag flag-{{ row.teams.guests.id|slice(0, 2) }}" alt="{{ row.teams.guests.fullname }}" ></div>
                                {#<img class="flag flag-{{ row.teams.guests.id|slice(0, 2) }}">#}
                                    {{ row.teams.guests.fullname }}
                                </td>
                            <td>
                                <input class="cote" type="text" name="start_cote1"/>
                            </td>
                            <td>
                                <input class="cote" type="text" name="start_coten"/>
                            </td>
                            <td>
                                <input class="cote" type="text" name="start_cote2"/>
                            </td>
                            <td>{{ row.status }}</td>
                            <td>
                                <input type="radio" name="host"/> 1
                                <input type="radio" name="neutre"/> N
                                <input type="radio" name="guest"/> 2

                            </td>
                            <td>
                                <a href="#">{{ 'Enregister'|trans }}</a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </table>
        </div>
        <br/>

        <div class="col-lg-12">
            <div class="header-table">
                {{ 'Nombre de match'|trans }} : {{ totalMatch }}
            </div>
            <table class="table-list">
                <tr>
                    <th>{{ 'Date'|trans }}</th>
                    <th>
                        {{ 'Domicile'|trans }}
                    </th>
                    <th>
                        {{ 'Score'|trans }}
                    </th>
                    <th>
                        {{ 'Visiteur'|trans }}
                    </th>
                    <th>
                        {{ 'Cote 1'|trans }}
                    </th>
                    <th>
                        {{ 'Cote N'|trans }}
                    </th>
                    <th>
                        {{ 'Cote 2'|trans }}
                    </th>
                    <th>
                        {{ 'Status'|trans }}
                    </th>
                    <th>{{ 'Master prono' }}</th>
                    <th>
                        {{ 'Actions'|trans }}
                    </th>
                </tr>
                {% for row in items %}
                    {% if row.status == 'finished' %}
                        {% if dateSearch is not null %}
                            {% set dateValide = row.timestamp_starts|date('Y-m-d') %}
                            {% if timeSearch  %}
                            {% if dateValide == search %}
                                <tr>
                                    <td>{{ row.timestamp_starts|date('d/m/Y  - h:i') }}</td>
                                    <td>
                                        <div class="flag flag-{{ row.teams.hosts.id|slice(0, 2) }}" alt="{{ row.teams.hosts.fullname }}" ></div>
                                        {{ row.teams.hosts.fullname }}
                                    </td>
                                    <td>{{ row.score }}</td>
                                    <td>
                                        <div class="flag flag-{{ row.teams.guests.id|slice(0, 2) }}" alt="{{ row.teams.guests.fullname }}" ></div>
                                        {{ row.teams.guests.fullname }}</td>
                                    <td>
                                        <input class="cote" type="text" name="cote1_{{ row.id }}" />
                                    </td>
                                    <td>
                                        <input class="cote" type="text" name="coten_{{ row.id }}"/>
                                    </td>
                                    <td>

                                        <input class="cote" type="text" name="cote2_{{ row.id }}"/>
                                    </td>
                                    <td>{{ row.status }}</td>
                                    <td>
                                        <input type="checkbox" name="host"/> 1
                                        <input type="checkbox" name="neutre"/> N
                                        <input type="checkbox" name="guest"/> 2

                                    </td>
                                    <td>
                                        <a href="#">{{ 'Enregister'|trans }}</a>
                                    </td>
                                </tr>
                            {% endif %}
                        {% else %}
                            <tr>
                                <td>{{ row.timestamp_starts|date('d/m/Y  - h:i') }}</td>
                                <td> <div class="flag flag-{{ row.teams.hosts.id|slice(0, 2) }}" alt="{{ row.teams.hosts.fullname }}" ></div>
                                    {{ row.teams.hosts.fullname }}
                                </td>
                                <td>{{ row.score }}</td>
                                <td> <div class="flag flag-{{ row.teams.guests.id|slice(0, 2) }}" alt="{{ row.teams.guests.fullname }}" ></div>
                                    {{ row.teams.guests.fullname }}</td>
                                <td>
                                    <input class="cote" type="text" name="cote1_{{ row.id }}"/>
                                </td>
                                <td>
                                    <input class="cote" type="text" name="coten_{{ row.id }}"/>
                                </td>
                                <td>
                                    <input class="cote" type="text" name="cote2_{{ row.id }}"/>
                                </td>
                                <td>{{ row.status }}</td>
                                <td>
                                    <input type="radio" name="host"/> 1
                                    <input type="radio" name="neutre"/> N
                                    <input type="radio" name="guest"/> 2

                                </td>
                                <td>
                                    <a href="#">{{ 'Enregister'|trans }}</a>
                                </td>
                            </tr>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </table>
            <div class="space"></div>
        </div>
    </div>
{% endblock %}