{% extends 'BackAdminBundle::layout.html.twig' %}
{% block title %} {{ parent() }} {% endblock %}
{% block ariane %} {{ parent() }} {% endblock %}

{% block page %}

    <div class="col-lg-12">
        <div class="box-header-response">
            {{ 'Gestion Emails '|trans }} :
            <div class="link">
                {#{% if is_granted('ROLE_SUPER_ADMIN') %}#}
                <a href="{#{{ path('index_administrator') }}#}">{{ 'Parametres Email'|trans }}</a> |
                {#{% endif %}#}
                <a href="{#{{ path('export_csv_utilisateur') }}#}">{{ 'Ajout Email'|trans }}</a>
            </div>
            <div class="clear">

            </div>
        </div>
    </div>
    <div class="box-response">
        <div class="col-lg-12">
            <div class="col-lg-6">
                <div class="parameter-email">
                    {{ form_start(formParameter) }}

                    {{ form_widget(formParameter.emailSite, {'attr': {'placeholder': 'Email du site'|trans }}) }}
                    {{ form_widget(formParameter.nomExpediteur, {'attr': {'placeholder': 'Nom Expéditeur'|trans }}) }}
                    {{ form_widget(formParameter.seuriteSMTP, {'attr': {'placeholder': 'Sécurité SMTP'|trans }}) }}
                    {{ form_widget(formParameter.portSMTP, {'attr': {'placeholder': 'Port SMTP'|trans }}) }}
                    {{ form_widget(formParameter.userSMTP, {'attr': {'placeholder': 'Utilisateur SMTP'|trans }}) }}
                    {{ form_widget(formParameter.passwordSMTP, {'attr': {'placeholder': 'Password SMTP'|trans }}) }}
                    {{ form_widget(formParameter.serveurSMTP, {'attr': {'placeholder': 'Password SMTP'|trans }}) }}

                    {{ form_end(formParameter) }}
                </div>
            </div>
            <div class="col-lg-6">
                <div class="adresse-societe">
                    adresse
                </div>
            </div>
            <div class="col-lg-6">
                <div class="template-tmp">
                    tmp
                </div>
            </div>
            <div class="col-lg-6">
                <div class="template-change">
                    change
                </div>
            </div>

        </div>
    </div>
{% endblock %}
