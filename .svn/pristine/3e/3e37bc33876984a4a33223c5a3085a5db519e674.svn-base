{% extends 'BackAdminBundle::layout.html.twig' %}
{% block title %} {{ parent() }} {% endblock %}
{% block ariane %} {{ parent() }} {% endblock %}

{% block page %}
    <div class="box-header-response">
        {{ 'Modifier les droits'|trans }}
        <div class="link">
            <a href="{{ path('list_roles_administrator',{'idAdmin': idAdmin }) }}">{{ 'Retour'|trans }}</a>
        </div>
    </div>
    <div class="box-response">
        {{ form_start(form) }}
        <table border="0">
            <tr>
                <td>{{ "Lecture" |trans }}</td>
                <td>
                    {{ form_widget(form.lecture) }}
                </td>
            </tr>
            <tr>
                <td>{{ "Modification" |trans }}</td>
                <td>
                    {{ form_widget(form.modification) }}
                </td>
            </tr>
            <tr>
                <td>{{ "Suppression" |trans }}</td>
                <td>
                    {{ form_widget(form.suppression) }}
                </td>
            </tr>
            <tr>
                <td>{{ "Ajout" |trans }}</td>
                <td>
                    {{ form_widget(form.ajout) }}
                </td>
            </tr>
            <tr>
                <td>

                </td>
                <td>
                    <input type="submit" value="{{ 'send'|trans }}"/>
                </td>
            </tr>
        </table>
        {{ form_end(form) }}
    </div>
{% endblock %}