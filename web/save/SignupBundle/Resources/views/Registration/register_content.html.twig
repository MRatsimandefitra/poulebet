{% trans_default_domain 'FOSUserBundle' %}
<div class="col-md-7">
</div>
<div class="col-md-5">
    <div class="login">
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
              class="fos_user_registration_register">
            <div class="box-login-input">
                <img class="logo-input" src="{{ asset('images/icon/usergnome.png') }}" height="25" width="25"/>
                {{ form_widget(form.username, { 'attr': { 'placeholder': 'Utilisateur'}}) }}
                {{ form_errors(form.username) }}
            </div>

            <div class="box-login-input">
                <img class="logo-input" src="{{ asset('images/icon/1426448896_mail.png') }}" height="25" width="25"/>
                {{ form_widget(form.email, { 'attr': { 'placeholder': 'Email'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="box-login-input">
                <img class="logo-input" src="{{ asset('images/icon/gadana.png') }}" height="25" width="25"/>
                {{ form_widget(form.plainPassword.first, { 'attr': { 'placeholder': 'Mot de passe'}}) }}
                {{ form_errors(form.plainPassword) }}
            </div>

            <div class="box-login-input">
                <img class="logo-input" src="{{ asset('images/icon/gadana.png') }}" height="25" width="25"/>
                {{ form_widget(form.plainPassword.second, { 'attr': { 'placeholder': 'Confirmation'}}) }}
                {{ form_errors(form.plainPassword) }}
            </div>
            {{ form_rest(form) }}
            <div>
                <input type="submit" value="{{ 'registration.submit'|trans }}"/>
            </div>
        </form>
    </div>
    <div class="login">
        <a href="{{ path('fos_user_security_login') }}"> Je souhaite me connecter </a>
    </div>
</div>