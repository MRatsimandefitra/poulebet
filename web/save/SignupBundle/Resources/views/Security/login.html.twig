{% extends "BackSignupBundle::layout.html.twig" %}
{% block title %} {{ parent() }} {% endblock %}
{% block ariane %} {{ parent() }} {% endblock %}

{% block page %}

    <div class="col-md-7">

    </div>
    <div class="col-md-5">
        <div class="login">
            <form action="{{ path('login_check') }}" method="post">
                {% if error %}
                    <div class="error">{#{{ error.messageKey|trans(error.messageData, 'security') }}#}
                        {{ error }}
                    </div>
                {% endif %}

                {#<input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>#}

                <div class="box-login-input">
                    <img class="logo-input" src="{{ asset('images/icon/usergnome.png') }}" height="25" width="25"/>
                    <input type="text" placeholder="{{ 'security.login.username'|trans }}" id="username"
                           name="_username" value="{{ last_username }}" required="required"/>
                    {#{{ form_widget(form.username, {'attr': {'placeholder': 'security.login.email' }}) }}
                    {{ form_errors(form.username) }}#}
                </div>
                <div class="box-login-input">
                    <img class="logo-input" src="{{ asset('images/icon/gadana.png') }}" height="25" width="25"/>
                    <input type="password" id="password" name="_password" required="required"
                           placeholder="{{ 'security.login.password'|trans }}"/>
                    {#{{ form_widget(form.password, {'attr': {'placeholder': 'security.login.email' }}) }}
                    {{ form_errors(form.password) }}#}
                </div>
                <div class="box-login-input">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>
                <div class="box-login-input">
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
                </div>
            </form>
        </div>
        <div class="login">
            {#<a href="{{ path('fos_user_registration_register') }}"> Je souhaite créer un compte </a> <br />#}
            {#<a href="{{ path('fos_user_resetting_check_email') }}"> J'ai oubiée mon mot de passe</a> <br />#}
        </div>
    </div>
{% endblock page %}
