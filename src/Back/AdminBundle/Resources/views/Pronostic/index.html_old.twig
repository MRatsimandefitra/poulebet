{% extends 'BackAdminBundle::layout.html.twig' %}
{% block title %} {{ parent() }} {% endblock %}
{% block ariane %} {{ parent() }} {% endblock %}

{% block page %}
    <div class="box-header-response">
        {{ 'Listes des Matchs du jour'|trans }}
    </div>
    <br/><br/>
    <div class="col-lg-12">
        <div class="col-lg-4">

        </div>
        <div class="col-lg-4">
            <form action="" method="get">
                {{ "Date"|trans }} : <input type="date" name="date_match"/> <input type="submit"
                                                                                   value="{{ 'Mettre Ã  Jour'|trans }}"/>
            </form>
        </div>
        <div class="col-lg-4">

        </div>
        <div class="col-lg-12">
            <div class="header-table">

            </div>
            <table class="table-list">
                <tr>
                    <th>{{ 'Date'|trans }}</th>
                    <th>
                        {{ 'Domicile'|trans }}
                    </th>
                    <th>
                        {{ 'Score'|trans }}
                    </th>
                    <th>
                        {{ 'Visiteur'|trans }}
                    </th>
                    <th>
                        {{ 'Cote 1'|trans }}
                    </th>
                    <th>
                        {{ 'Cote N'|trans }}
                    </th>
                    <th>
                        {{ 'Cote 2'|trans }}
                    </th>
                    <th>
                        {{ 'Status'|trans }}
                    </th>
                    <th>{{ 'Master prono' }}</th>
                    <th>
                        {{ 'Actions'|trans }}
                    </th>
                </tr>
                {% for row in items %}
                    {% if row.status == 'start' %}
                        <tr>
                            <td>{{ row.timestamp_starts|date('d/m/Y') }}</td>
                            <td>{{ row.teams.hosts.fullname }}
                            </td>
                            <td>{{ row.score }}</td>
                            <td>{{ row.teams.guests.fullname }}</td>
                            <td>
                                <input class="cote" type="text" name="start_cote1"/>
                            </td>
                            <td>
                                <input class="cote" type="text" name="start_coten"/>
                            </td>
                            <td>
                                <input class="cote" type="text" name="cote2"/>
                            </td>
                            <td>{{ row.status }}</td>
                            <td>
                                <input type="radio" name="host"/> 1
                                <input type="radio" name="neutre"/> N
                                <input type="radio" name="guest"/> 2
                                <a href="#">{{ 'Enregister'|trans }}</a>
                            </td>
                            <td>
                                ............
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </table>
        </div>
        <br/>

        <div class="col-lg-12">
            <div class="header-table">
                {{ 'Nombre de match'|trans }} : {{ totalMatch }}
            </div>
            <table class="table-list">
                <tr>
                    <th>{{ 'Date'|trans }}</th>
                    <th>
                        {{ 'Domicile'|trans }}
                    </th>
                    <th>
                        {{ 'Score'|trans }}
                    </th>
                    <th>
                        {{ 'Visiteur'|trans }}
                    </th>
                    <th>
                        {{ 'Cote 1'|trans }}
                    </th>
                    <th>
                        {{ 'Cote N'|trans }}
                    </th>
                    <th>
                        {{ 'Cote 2'|trans }}
                    </th>
                    <th>
                        {{ 'Status'|trans }}
                    </th>
                    <th>{{ 'Master prono' }}</th>
                    <th>
                        {{ 'Actions'|trans }}
                    </th>
                </tr>
                {% for row in items %}
                    {% if row.status == 'finished' %}
                        {% if search is not null %}
                            {% set dateValide = row.timestamp_starts|date('Y-m-d') %}
                            {% if dateValide == search %}
                                <tr>
                                    <td>{{ row.timestamp_starts|date('d/m/Y') }}</td>
                                    <td>{{ row.teams.hosts.fullname }}
                                    </td>
                                    <td>{{ row.score }}</td>
                                    <td>{{ row.teams.guests.fullname }}</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>{{ row.status }}</td>
                                    <td>
                                        <input type="checkbox" name="host"/> 1
                                        <input type="checkbox" name="neutre"/> N
                                        <input type="checkbox" name="guest"/> 2
                                        <a href="#">{{ 'Enregister'|trans }}</a>
                                    </td>
                                    <td>
                                        ............
                                    </td>
                                </tr>
                            {% endif %}
                        {% else %}
                            <tr>
                                <td>{{ row.timestamp_starts|date('d/m/Y') }}</td>
                                <td>{{ row.teams.hosts.fullname }}
                                </td>
                                <td>{{ row.score }}</td>
                                <td>{{ row.teams.guests.fullname }}</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>{{ row.status }}</td>
                                <td>
                                    <input type="radio" name="host"/> 1
                                    <input type="radio" name="neutre"/> N
                                    <input type="radio" name="guest"/> 2
                                    <a href="#">{{ 'Enregister'|trans }}</a>
                                </td>
                                <td>
                                    ............
                                </td>
                            </tr>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </table>
            <div class="space"></div>
        </div>
    </div>
{% endblock %}