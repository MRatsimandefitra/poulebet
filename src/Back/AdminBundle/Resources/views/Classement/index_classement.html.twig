{% extends 'BackAdminBundle::layout_match.html.twig' %}
{% block title %} {{ parent() }} {% endblock %}
{% block ariane %} {{ parent() }} {% endblock %}

{% block page %}

    {#<div class="sous-menu-page">
        {% include '@BackAdmin/Matchs/sous_menu.html.twig' %}
    </div>#}
    <br/><br/>
    <div class="col-lg-12">
        {#<div class="col-lg-1">

        </div>#}
        {#{% include 'BackAdminBundle:Matchs:form_search.html.twig' with {'country': country , 'championat': championat} %}#}


        <br/>

        <div class="col-lg-12">
            <div class="form-serach-classement">
                <form action="" method="post">
                    {{ 'Date début' }}
                    {% if params['dateDebut'] is defined and params['dateDebut'] %}
                        <input type="text" name="dateDebut" value="{{ params['dateDebut'] }}" class="datepic"/>
                    {% else %}
                        <input type="text" name="dateDebut" value="" class="datepic"/>
                    {% endif %}

                    {{ 'Date finale' }}
                    {% if params['dateFinale'] is defined and params['dateFinale'] %}
                        <input type="text" name="dateFinale" value="{{ params['dateFinale'] }}" class="datepic"/>
                    {% else %}
                        <input type="text" name="dateFinale" value="" class="datepic"/>
                    {% endif %}

                    <input type="submit" value="{{ 'Chercher' }}"/>
                </form>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="header-table">

            </div>
            <table class="table-list">
                <tr>

                    <th>
                        {{ 'Photo'|trans }}
                    </th>
                    <th>
                        {{ 'Nom'|trans }}
                    </th>
                    <th>
                        {{ 'Prénom'|trans }}
                    </th>
                    <th>
                        {{ 'Classement'|trans }}
                    </th>
                    <th>
                        {{ "Action"|trans }}
                    </th>
                </tr>
                {% if result is defined and result %}
                    {% for row in result %}
                        <tr>
                            <td>
                                <img src="{#{{ asset('upload/') }}#}" alt="" width="50" height="50"/>

                            </td>
                            <td>
                                {{ row['nom'] }}
                            </td>
                            <td>
                                {{ row['prenom'] }}
                            </td>
                            <td>
                                {{ row['classement'] }}
                            </td>
                            <td>
                                <a href="{{ path('details_classement', {'id': row['id']}) }}">
                                    {{ 'Détails' }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="8"> {{ 'Aucun matchs \'a été trouvé' }}</td>
                    </tr>
                {% endif %}
            </table>
            <div class="space"></div>
        </div>

    </div>

{% endblock %}