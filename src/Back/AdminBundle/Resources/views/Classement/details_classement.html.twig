                 </div>#}
            </div>
            {#

            remplacer nom photo prénom par
datemise,matchs,vote,combiné (case à cocher),misetotale,gainpotentiel,cote1,coteN,cote2
            #}
            <div class="photo">
                <img src="" width="50" height="50" alt=""/>
            </div>
            <table class="table-list">
                <tr>

                    <th>
                        {{ 'Date mise'|trans }}
                    </th>
                    <th>
                        {{ 'Matchs'|trans }}
                    </th>
                    <th>
                        {{ 'Vote'|trans }}
                    </th>
                    <th>
                        {{ 'Combiné'|trans }}
                    </th>
                    <th>
                        {{ 'Mise total' }}
                    </th>
                    <th>
                        {{ 'Gain potentiel' }}
                    </th>

                </tr>
                {% if classement is defined and classement %}
                    {% for row in classement %}
                    <tr>
                        <td>
                            {#<img src="&#123;&#35;{{ asset('upload/') }}&#35;&#125;" alt="" width="50" height="50"/>#}
                            {{ row.match.dateMatch|date('d-m-Y H:i') }}
                        </td>
                        <td>
                            <img src="{{ }}" width="25" height="25" alt=""/>

                        </td>
                        <td>
                            <img src="{{ asset('images/Flag-foot/' ~ row.cheminLogoDomicile ) }}" alt="" width="50"
                                 height="50"/> {{ row.match.equipeDomicile }} vs <img
                                    src="{{ asset('images/Flag-foot/' ~ row.cheminLogoVisiteur ) }}" alt="" width="50"
                                    height="50"/>{{ row.match.equipeVisiteur }}
                        </td>
                        <td>
                            {{ row.classement }}
                        </td>
                        <td>
                            {{ row.miseTotale }}

                        </td>
                        <td>
                            {{ row.gainPotentiel }}
                        </td>

                    </tr>
                        {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="8"> {{ 'Aucun matchs \'a été trouvé' }}</td>
                    </tr>
                {% endif %}
            </table>
            <div class="space"></div>
        </div>

    </div>

{% endblock %}