{% extends 'BackAdminBundle::layout_match.html.twig' %}
{% block title %} {{ parent() }} {% endblock %}
{% block ariane %} {{ parent() }} {% endblock %}

{% block page %}

    {#<div class="sous-menu-page">
        {% include '@BackAdmin/Matchs/sous_menu.html.twig' %}
    </div>#}
    <br/><br/>
    <div class="col-lg-12">
        {#<div class="col-lg-1">

        </div>#}
        {#{% include 'BackAdminBundle:Matchs:form_search.html.twig' with {'country': country , 'championat': championat} %}#}


        <br/>

        <div class="col-lg-12">
            <div class="header-table">
                {#{{ 'Nombre de match'|trans }} : {{ totalMatch }}#}
                {# <div class="count">
                     <span class="label black">{{ 'Total recherche'|trans }}
                         : {{ pagination.getTotalItemCount }}</span>&nbsp;&nbsp; | &nbsp;&nbsp;
                     <span class="label black">{{ 'Total Matchs Finis'|trans }}
                         : {{ totalItemsFinished }}</span>&nbsp;&nbsp;| &nbsp;&nbsp;
                     <span class="label black">{{ 'Total Matchs Active'|trans }}
                         : {{ totalItemsActif }}</span>&nbsp;&nbsp;| &nbsp;&nbsp;
                     <span class="label black">{{ 'Total Matchs Non commencé'|trans }}
                         : {{ totalItemsNotStarted }}</span>&nbsp;&nbsp;| &nbsp;&nbsp;
                     <span class="label black">{{ 'Total de tous les Matchs'|trans }}
                         : {{ totalItemsMatchs }}</span>&nbsp;&nbsp;


                 </div>#}
            </div>
            {#

            remplacer nom photo prénom par
datemise,matchs,vote,combiné (case à cocher),misetotale,gainpotentiel,cote1,coteN,cote2
            #}
            <div class="photo">
                <img src="" width="50" height="50" alt=""/>
            </div>
            <table class="table-list">
                <tr>

                    <th>
                        {{ 'Date mise'|trans }}
                    </th>
                    <th>
                        {{ 'Matchs'|trans }}
                    </th>
                    <th>
                        {{ 'Vote'|trans }}
                    </th>
                    <th>
                        {{ 'Combiné'|trans }}
                    </th>
                    <th>
                        {{ 'Mise total' }}
                    </th>
                    <th>
                        {{ 'Gain potentiel' }}
                    </th>

                </tr>
                {% if classement is defined and classement %}
                    {% for row in classement %}
                        <tr>
                            <td>
                                {#<img src="&#123;&#35;{{ asset('upload/') }}&#35;&#125;" alt="" width="50" height="50"/>#}
                                {{ row.matchs.dateMatch|date('d-m-Y H:i') }}
                            </td>
                            <td>
                                <img src="{{ asset('images/Flag-foot/' ~ row.matchs.cheminLogoDomicile ) }}" alt="" width="50"
                                     height="50"/> {{ row.matchs.equipeDomicile }} vs <img
                                        src="{{ asset('images/Flag-foot/' ~ row.matchs.cheminLogoVisiteur ) }}" alt=""
                                        width="50"
                                        height="50"/>{{ row.matchs.equipeVisiteur }}

                            </td>
                            <td>
                                {% if row.vote == 1 %}
                                    {{ 'Equipe domicile' }}
                                {% elseif row.vote == 2 %}
                                    {{ 'Equipe visiteur' }}
                                {% elseif row.vote == 0 %}
                                    {{ 'Match Null' }}
                                {% endif %}
                            </td>
                            <td>
                                {{ row.classement }}
                            </td>
                            <td>
                                {{ row.miseTotale }}

                            </td>
                            <td>
                                {{ row.gainPotentiel }}
                            </td>

                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="8"> {{ 'Aucun matchs \'a été trouvé' }}</td>
                    </tr>
                {% endif %}
            </table>
            <div class="space"></div>
        </div>

    </div>

{% endblock %}