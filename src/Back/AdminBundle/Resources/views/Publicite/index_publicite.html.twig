{% extends 'BackAdminBundle::layout_match.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}
{% block ariane %}{{ parent() }}{% endblock %}

{% block page %}
    <div class="col-lg-12">
        <div class="col-lg-12">
            <div class="title">
                <div class="link">
                    <a href="{{ path('add_publicite') }}">

                        {{ 'Ajouter publicite'|trans }}

                    </a>
                </div>
            </div>
            <table class="list-table">
                <tr>
                    <td>
                        {{ 'Image'|trans }}
                    </td>
                    <td>
                        {{ 'ID'|trans }}
                    </td>
                    <td>
                        {{ 'Type'|trans }}
                    </td>
                 {#   <td>
                        {{ 'Publié'|trans }}
                    </td>#}
                    <td>
                        {{ 'Actions'|trans }}
                    </td>
                </tr>
                {% if publicite is defined and publicite %}
                    {% for rowPub in publicite %}
                        <tr>
                            <td>
                                <img src="{{ asset('upload/admin/pub/' ~ rowPub.cheminPub ) }}" alt="" width="100" height="75"/>
                            </td>
                            <td>
                                {{ rowPub.id }}
                            </td>
                            <td>
                                {% if rowPub.isPopup %}
                                    <div class="carre green">
                                        {{ 'Popup' }}
                                    </div>
                                {% elseif rowPub.isBannier %}
                                    <div class="carre red">
                                        {{ 'Bannière' }}
                                    </div>
                                {% endif %}
                            </td>
                            {#<td>
                                {% if rowPub.isPublish %}
                                    <div class="carre green"></div>
                                {% else %}
                                    <div class="carre red"></div>
                                {% endif %}
                            </td>#}
                            <td>
                                <div class="action">

                                    <a href="{{ path('edit_publicite', {'id': rowPub.id }) }}">
                                        {{ 'Modifier'|trans }}
                                    </a> |
                                    <a href="{{ path('remove_publicite', {'id': rowPub.id }) }}">
                                        {{ 'Supprimer'|trans }}
                                    </a>

                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="5">
                            {{ 'Aucune publicité trouvé'|trans }}
                        </td>
                    </tr>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}
