{% extends 'BackAdminBundle::layout.html.twig' %}
{% block title %} {{ parent() }} {% endblock %}
{% block ariane %} {{ parent() }} {% endblock %}

{% block page %}

    <div class="box-header-response">
        {{ 'Ajout lots'|trans }}
    </div>
    <div class="col-lg-12">
        <div class="col-lg-8">
            {{form_start(form)}}
                <div>{{form_label(form.nomLot)}}</div> 
                <div>{{form_widget(form.nomLot ,{'attr': {'class': 'form-control'  }})}}</div>
                <div>{{form_label(form.description)}}</div> 
                <div>{{form_widget(form.description ,{'attr': {'class': 'form-control'  }})}}</div>
                <div>{{form_label(form.quantity)}}</div>
                <div>{{form_widget(form.quantity ,{'attr': {'class': 'form-control'  }})}}</div>
                {% if form.quantity.vars.errors|length > 0 %}
                <div>
                    <ul class="help-block list-unstyled">
                        {% for error in form.quantity.vars.errors %}
                            <li><span class="glyphicon glyphicon-exclamation-sign"></span> {{ error.message }}</li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
                <div>{{form_label(form.nomLong)}}</div> 
                <div>{{form_widget(form.nomLong ,{'attr': {'class': 'form-control'  }})}}</div>
                {% if form.nomLong.vars.errors|length > 0 %}
                <div>
                    <ul class="help-block list-unstyled">
                        {% for error in form.nomLong.vars.errors %}
                            <li class="text-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ error.message }}</li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
                <div>{{form_label(form.nbPointNecessaire)}}</div> 
                <div>{{form_widget(form.nbPointNecessaire ,{'attr': {'class': 'form-control'  }})}}</div>
                <div>{{form_widget(form.lotCategory ,{'attr': {'class': 'form-control'  }})}}</div>
                <div><label>{{'Image'|trans}}</label></div>
                <div>{{form_widget(form.cheminImage ,{'required': false})}}</div>
                {% if form.cheminImage.vars.errors|length > 0 %}
                <div>
                    <ul class="help-block list-unstyled">
                        {% for error in form.cheminImage.vars.errors %}
                            <li class="text-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ error.message }}</li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
                <div><input type="submit" value="Enregistrer" class="btn btn-primary"></div> 
            {{form_end(form)}}
        </div>
        <div class="col-lg-2">
            
        </div>
        
            
        
    </div>    
{% endblock %}