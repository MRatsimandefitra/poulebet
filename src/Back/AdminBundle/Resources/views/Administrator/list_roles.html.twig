            <td>{{ 'MODIFICATION'|trans }}</td>
            <td>{{ 'SUPPRESSION'|trans }}</td>
            <td>{{ 'AJOUT'|trans }}</td>
            <td>{{ 'ACTIONS'|trans }}</td>

            </thead>
