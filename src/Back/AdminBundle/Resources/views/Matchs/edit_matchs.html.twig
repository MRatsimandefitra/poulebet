{% extends 'BackAdminBundle::layout.html.twig' %}
{% block title %} {{ parent() }} {% endblock %}
{% block ariane %} {{ parent() }} {% endblock %}

{% block page %}

    <div class="box-header-response">
        {{ 'Listes des Matchs du jour'|trans }}
        {% include '@BackAdmin/Matchs/sous_menu.html.twig' %}
    </div>
    <br/><br/>
    {% if droitAdmin.lecture is defined and droitAdmin.lecture %}
        <div class="col-lg-12">
            <div class="col-lg-1">

            </div>
            <div class="col-lg-10">
                <div class="search-match">
                    <form action="" method="get">

                        {% if searchValue.date_match is defined %}
                            {{ "Date"|trans }} : <input type="text" name="date_match" id="datepic"
                                                        value="{{ searchValue.date_match }}"/>
                        {% else %}
                            {{ "Date"|trans }} : <input type="text" name="date_match" id="datepic"/>
                        {% endif %}

                        {% if searchValue.time_match is defined %}
                            {{ 'Heure'|trans }}: <input type="text" name="time_match" id="timepic" value="{{ searchValue.time_match }}"/>
                        {% else %}
                            {{ 'Heure'|trans }}: <input type="text" name="time_match" id="timepic"/>
                        {% endif %}

                        {{ 'Championat'|trans }}:
                        <select class="championat" name="championat_match" id="">

                            {#{{ searchValue.championat_match }}#}
                            {% if searchValue.championat_match is defined %}
                                <option value="{{ searchValue.championat_match }}">{{ searchValue.championat_match }}</option>
                            {% else %}
                                <option value=""></option>
                                {% for rowchampinat in championat %}
                                    <option value="{{ rowchampinat.nomchampionat }}">{{ rowchampinat.nomchampionat }}</option>
                                {% endfor %}
                            {% endif %}
                        </select>

                        {{ 'Pays'|trans }}:
                        <select class="pays" name="pays_match" id="">

                            {% if searchValue.pays is defined %}
                                <option value="{{ searchValue.pays }}">{{ searchValue.pays }}</option>
                            {% else %}
                                <option value=""></option>
                                {% for rowCountry in country %}
                                    <option value="{{ rowCountry.iso }}"> {{ rowCountry.name }}  </option>
                                {% endfor %}
                            {% endif %}
                        </select>
                        <input type="submit" value="{{ 'Mettre à Jour'|trans }}"/>
                    </form>
                </div>
            </div>
            <div class="col-lg-1">

            </div>

            <br/>

            <div class="col-lg-12">
                {{ form_start(form) }}
                <div class="col-lg-6">
                    <div class="grey">
                        <table>
                            <tr>
                                <td>{{ 'Logo Equipe Domicile' }}</td>
                                <td>
                                    {{ form_widget(form.cheminLogoDomicile) }}
                                    {#{{ form_errors(form.cheminLogoDomicile) }}#}
                                </td>
                                <td>
                                    <img src="{{ asset('upload/admin/flag/' ~ matchs.cheminLogoDomicile) }}" alt=""/>
                                </td>
                            </tr>
                            <tr>
                                <td>{{ 'Equipe Domicile' }}</td>
                                <td colspan="2">
                                    {{ form_widget(form.equipeDomicile) }}
                                    {{ form_errors(form.equipeDomicile) }}
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    {{ 'Résultat domicile ' }}
                                </td>
                                <td colspan="2">
                                    {{ form_widget(form.resultatDomicile) }}
                                    {{ form_errors(form.resultatDomicile) }}
                                </td>
                            </tr>
                        </table>


                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="grey">
                        <table>
                            <tr>
                                <td>{{ 'Logo Equipe Domicile' }}</td>
                                <td>
                                    {{ form_widget(form.cheminLogoVisiteur) }}
                                    {#{{ form_errors(form.cheminLogoVisiteur) }}#}
                                </td>
                                <td>
                                    <img src="{{ asset('upload/admin/flag/' ~ matchs.cheminLogoVisiteur) }}" alt=""/>
                                </td>
                            </tr>
                            <tr>
                                <td>{{ 'Equipe Domicile' }}</td>
                                <td colspan="2">
                                    {{ form_widget(form.equipeVisiteur) }}
                                    {{ form_errors(form.equipeVisiteur) }}
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    {{ 'Résultat domicile ' }}
                                </td>
                                <td colspan="2">
                                    {{ form_widget(form.resultatVisiteur) }}
                                    {{ form_errors(form.resultatVisiteur) }}
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="grey">
                        <table>
                            <tr>
                                <td>
                                    {{ 'Date Matchs' }}
                                </td>
                                <td colspan="3">
                                    {{ form_widget(form.dateMatch) }}
                                    {{ form_errors(form.dateMatch) }}
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    {{ 'Score' }}
                                </td>
                                <td colspan="3"colspan="3">
                                    {{ form_widget(form.score) }}
                                    {{ form_errors(form.score) }}
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    {{ 'Temp ecoulé ' }}
                                </td>
                                <td colspan="3">
                                    {{ form_widget(form.tempsEcoules, {'attr': {'enable': false}}) }}
                                    {{ form_errors(form.tempsEcoules) }}
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    {{ 'Pronostic' }}
                                </td>
                                <td>
                                   {{ '1' }} {{ form_widget(form.cot1Pronostic) }}

                                </td>
                                <td>
                                    {{ 'N' }} {{ form_widget(form.coteNPronistic) }}

                                </td>
                                <td>
                                    {{ '2' }} {{ form_widget(form.cote2Pronostic) }}
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    {{ 'Resultat Domicile' }}
                                </td>
                                <td>
                                    {{ '1' }} {{ form_widget(form.masterProno1) }}

                                </td>
                                <td>
                                    {{ 'N' }} {{ form_widget(form.masterPronoN) }}

                                </td>
                                <td>
                                    {{ '2' }} {{ form_widget(form.masterProno2) }}
                                </td>
                            </tr>
                           {# <tr>
                                <td>
                                    {{ 'Résultat visiteur' }}
                                </td>
                                <td colspan="3">
                                    &#123;&#35;{{ form_widget(form.resultatVisiteur) }}
                                    {{ form_errors(form.resultatVisiteur) }}&#35;&#125;
                                </td>
                            </tr>#}
                            <td colspan="5">

                                <input type="submit" value="{{ 'Modifier' }}"/>
                            </td>

                        </table>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    {% else %}
        {{ 'vous n\' avez pas le droit de lecture sur un match ' }}
    {% endif %}
{% endblock %}