{% extends 'BackAdminBundle::layout.html.twig' %}
{% block title %} {{ parent() }} {% endblock %}
{% block ariane %} {{ parent() }} {% endblock %}

{% block page %}

    <div class="box-header-response">
        {{ 'Listes des Matchs du jour'|trans }}
        {% include '@BackAdmin/Matchs/sous_menu.html.twig' %}
    </div>

    <div class="col-lg-12">
        <div class="list">
            <table>
                <tr>
                    <td>{{ 'Numero'|trans }}</td>
                    <td>{{ 'LotoFoot'|trans }}</td>
                    <td>{{ 'Fin de validation'|trans }}</td>
                    <td>{{ 'Actions'|trans }}</td>
                </tr>
                {% for row in lotoFoot7 %}
                    <tr>
                        <td>
                            {{ row.numero }}
                        </td>
                        <td>
                            {{ 'Loto Foot 7'|trans }}
                        </td>
                        <td>
                            {{ row.finValidation|date('d-m-Y') }}
                        </td>
                        <td>
                            {% if droitAdmin.modification is defined and droitAdmin.modification %}
                            <a href="{{ path('edit_loto_foot', {'idLotoFoot': 7, 'id': row.id }) }}"> <span class="glyphicon glyphicon-pencil orange" aria-hidden="true"></span> Modifier </a> |
                                {% endif %}
                            {% if droitAdmin.suppression is defined and droitAdmin.suppression  %}
                                <a onclick="supprimer('Etes vous sur de vouloir supprimer ?');" href="{{ path('remove_loto_foot', {'idLotoFoot': 7 , 'id': row.id}) }}"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span> Supprimer </a>
                            {% endif %}
                            {% if droitAdmin.ajout is defined and droitAdmin.ajout %}
                            <a href="{{ path('add_match_loto_foot', {'idLotoFoot': 7, 'id': row.id }) }}"><span class="glyphicon glyphicon-plus green" aria-hidden="true"></span>  {{ 'Ajouter Match' }}</a>
                                {% endif %}


                        </td>
                    </tr>
                {% endfor %}
                {% for row in lotoFoot15 %}
                    <tr>
                        <td>
                            {{ row.numero }}
                        </td>
                        <td>
                            {{ 'Loto Foot 15'|trans }}
                        </td>
                        <td>
                            {{ row.finValidation|date('d-m-Y') }}
                        </td>
                        <td>
                            {% if droitAdmin.modification is defined and droitAdmin.modification %}
                            <a href="{{ path('edit_loto_foot', {'idLotoFoot': 15, 'id': row.id }) }}"><span class="glyphicon glyphicon-pencil orange" aria-hidden="true"></span> Modifier </a> |
                            {% endif %}
                            {% if droitAdmin.suppression is defined and droitAdmin.suppression %}
                            <a onclick="supprimer('Etes vous sur de vouloir supprimer ?');" href="{{ path('remove_loto_foot', {'idLotoFoot': 7 , 'id': row.id}) }}"> <span class="glyphicon glyphicon-remove red" aria-hidden="true"></span> supprimer </a>
                                {% endif %}
                            {% if droitAdmin.ajout is defined and droitAdmin.ajout %}
                            <a href="{{ path('add_match_loto_foot', {'idLotoFoot': 15, 'id': row.id }) }}"><span class="glyphicon glyphicon-plus green" aria-hidden="true"></span>  {{ 'Ajouter Match' }}</a>
                                {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}