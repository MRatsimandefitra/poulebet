{% extends 'BackAdminBundle::layout.html.twig' %}
{% block title %} {{ parent() }} {% endblock %}
{% block ariane %} {{ parent() }} {% endblock %}

{% block page %}
    <div class="col-lg-12">
        <div class="box-header-response">
            {{ 'Ajout un mouvement de crédit'|trans }} : {% if utilisateur.username %}{{ utilisateur.username }}{% else %}{{ utilisateur.email }}{% endif %}
            <div class="link">
                <a href="{{ path('mvtCredit_utilisateur',{'id':utilisateur.id}) }}">{{ 'Liste des crédits'|trans }}</a>
            </div>
            <div class="clear">

            </div>
        </div>
    </div>
    <div class="box-response">
    <div class="edit-profil-admin">
    {{ form_start(form) }}
    <div class="row">
        <label>{{ form_label(form.soldeCredit) }}</label>
        {{ form_widget(form.soldeCredit,{'attr':{'value' : utilisateur.lastBalance }}) }}
    </div>
    <div class="row">
        <label>{{ form_label(form.entreeCredit) }}</label>
        {{ form_widget(form.entreeCredit) }}
    </div>
    <div class="row">
        <label>{{ form_label(form.sortieCredit) }}</label>
        {{ form_widget(form.sortieCredit) }}
        {% if form.sortieCredit.vars.errors|length > 0 %}
            <div>
                <ul class="help-block list-unstyled">
                    {% for error in form.sortieCredit.vars.errors %}
                        <li class="text-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    </div>
    <div class="row">
        <label>{{ form_label(form.typeCredit) }}</label>
        {{ form_widget(form.typeCredit) }}
        {% if form.typeCredit.vars.errors|length > 0 %}
            <div>
                <ul class="help-block list-unstyled">
                    {% for error in form.typeCredit.vars.errors %}
                        <li class="text-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="{{ "Enregistrer"|trans }}">
    </div>

    {{ form_end (form) }}
    <div>
    </div>
{% endblock %}